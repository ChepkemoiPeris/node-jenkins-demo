pipeline {
    agent any
     tools {
        nodejs 'node'
    }
    stages{
        stage('check version'){
            steps{
                 sh 'node --version'
            }
        }

        stage('Clone repo'){
            steps{
                git(
                    url: "https://github.com/ChepkemoiPeris/node-jenkins-demo.git",
                    branch: "main" 
                )
            }
        }
        stage('Install npm'){
            steps{
                 sh 'npm install'
            }
        }
        stage('Run app'){
            steps{
                 sh 'node index.js'
            }
        }
    }
}