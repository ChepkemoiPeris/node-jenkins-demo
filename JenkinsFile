pipeline {
    agent any
     tools {
        nodejs 'node'
    }
    stages{
        stage('check version'){
            steps{
                 sh 'node --version'
            }
        }

        stage('Clone repo'){
            steps{
                git(
                    url: "https://github.com/ChepkemoiPeris/node-jenkins-demo.git",
                    branch: "main" 
                )
            }
        }
        stage('Install npm'){
            steps{
                 sh 'npm install'
            }
        }
        stage('Run app'){
            steps{ 
                 sh 'nohup node index.js &'
            }
        }
        stage('Deploy to Heroku'){
            steps{
               withCredentials([usernameColonPassword(credentialsId: 'f8bddf82-e534-47cc-8a28-bcc281b5f8aa', variable: 'HEROKU_CREDENTIALS')]) {
                    sh 'git push https://${HEROKU_CREDENTIALS}@git.heroku.com/node-jenkins-demo.git master' } 
            }
        }
    }
}