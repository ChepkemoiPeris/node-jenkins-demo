pipeline {
    agent any
    
    stages {
        stage('check version') {
            steps {
                bat 'node --version'
            }
        }

        stage('Clone repo') {
            steps {
                git(
                    url: "https://github.com/ChepkemoiPeris/node-jenkins-demo.git",
                    branch: "main"
                )
            }
        }
        stage('Install npm') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run app') {
            steps {
                bat 'node index.js'
            }
        }
    }
}
